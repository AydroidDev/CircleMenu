<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/snackbar_contaner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Custom1Activity">


    <com.imangazaliev.circlemenu.CircleMenu
        android:id="@+id/circle_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:angleRange="100"
        app:centerButtonGravity="right|bottom|end"
        app:hintsEnabled="true"
        app:showClickAnim="false"
        app:startAngle="200">

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#2196F3"
            app:colorPressed="#1E88E5"
            app:hintText="Favorite"
            app:icon="@drawable/ic_favorite"
            app:showClickAnim="false" />

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#4CAF50"
            app:colorPressed="#43A047"
            app:hintText="Search"
            app:icon="@drawable/ic_search"
            app:showClickAnim="false" />

    </com.imangazaliev.circlemenu.CircleMenu>

</RelativeLayout>